<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{:L('我的订单')}</title>
		<meta name="description" content="从一开始我们就专注大型连锁快餐行业信息、芯易科技">
		<meta name="keywords" content="芯易科技、轻餐饮、订单列表">
		<include file="Public:script" />
		<script type="text/javascript" src="__PUBLIC__/js/iscroll/demos/iscroll.js"></script> 
	</head>
	<div id="wrapper" class="container" v-cloak>
		<!--弹窗-->
		<div class="js_dialog" id="iosDialog2" v-if="errorText">
		    <div class="weui-mask"></div>
		    <div class="weui-dialog">
		        <div class="weui-dialog__bd" style="padding:1.2em 20px .1em">{:L('信息异常')}</div>
		        <div class="weui-dialog__ft">
		            <a href="javascript:;" class="weui-dialog__btn weui-dialog__btn_primary" v-on:click="back">{:L('点击返回')}</a>
		        </div>
		    </div>
		</div>
		<div id="scroller">
			<div id="pullDown" :class="pullDownclassName">
				<span class="pullDownIcon"></span>
				<span class="pullDownLabel">{{pullDownText}}</span>
			</div>
			<ul id="thelist">
				<div class="page preview">
				    <div class="page__bd">
				        <div class="weui-form-preview"  v-for="item in List">
				            <div class="weui-form-preview__hd">
				                <label class="weui-form-preview__label">{:L('付款金额')}</label>
				                <em class="weui-form-preview__value">¥{{item.price}}</em>
				            </div>
				            <div class="weui-form-preview__bd">
				                <div class="weui-form-preview__item">
				                    <label class="weui-form-preview__label">{:L('订单号')}</label>
				                    <span class="weui-form-preview__value">{{item.orderno}}</span>
				                </div>
				                <div class="weui-form-preview__item">
				                    <label class="weui-form-preview__label">{:L('门店')}</label>
				                    <span class="weui-form-preview__value">{{item.storename}}</span>
				                </div>
				                <div class="weui-form-preview__item">
				                    <label class="weui-form-preview__label">{:L('订单类型')}</label>
				                    <span class="weui-form-preview__value">{{item.ordertype}}</span>
				                </div>
				                <div class="weui-form-preview__item">
				                    <label class="weui-form-preview__label">{:L('订单状态')}</label>
				                    <span class="weui-form-preview__value" v-bind:style="{ color: item.statuscolor}">{{item.status}}</span>
				                </div>
				                <div class="weui-form-preview__item">
				                    <label class="weui-form-preview__label">{:L('下单时间')}</label>
				                    <span class="weui-form-preview__value">{{item.addtime}}</span>
				                </div>
				            </div>
				            <div class="weui-form-preview__ft">
				                <a class="weui-form-preview__btn weui-form-preview__btn_primary" :href='"{:U('Myorder/detail')}?type=1&orderno="+item.orderno'>{:L('查看详情')}</a>
				            </div>
				        </div>
				    </div>
				</div>
			</ul>
			<div id="pullUp" :class="pullDownclassName">
				<span class="pullUpIcon"></span>
				<span class="pullUpLabel">{{pullUpText}}</span>
			</div>
		</div>
	</div>
	</body>
</html>
